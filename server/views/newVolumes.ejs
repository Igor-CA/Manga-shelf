<div style="background-color: #fafafa">
	<%- await include('./header.ejs') %>

	<div
		style="
			margin: 0 auto;
			max-width: 720px;
			padding: 30px 0;
			font-family: Arial;
			background-color: #fafafa;
			color: #3d4e66;
		"
	>
		<h2>Hello, <%= username %></h2>
		<p>
			New volumes from your collection launched this week. See them
			below
		</p>
		<% for (let i=0; i < volumes.length; i++) { %>
		<a
			href="<%= process.env.CLIENT_HOST_ORIGIN%>/volume/<%= volumes[i]._id %>"
			style="
				margin: 0 auto;
				display: block;
				width: 300px;
				height: 400px;
				background-image: url('cid:img<%= i+1 %>.webp');
				background-size: cover;
				background-position: center;
				border: none;
				border-radius: 5px;
				text-align: center;
			"
		></a>
		<p style="text-align: center; font-weight: bold">
			<%= volumes[i].serie.title %> volume <%= volumes[i].number%>
		</p>
		<% } %>
	</div>
	<%- await include('./footer.ejs') %>
</div>
