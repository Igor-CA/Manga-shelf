<div style="background-color: #fafafa">
	<%- await include('./header.ejs') %>

	<div
		style="
			margin: 0 auto;
			max-width: 720px;
			padding: 30px 0;
			font-family: Arial;
			background-color: #fafafa;
			color: #3d4e66;
		"
	>
		<h2>Hello, <%= username %></h2>
		<p>
			A new volume of <%= series %> launched this week. Click
			<a
				href="<%= process.env.CLIENT_HOST_ORIGIN%>/volume/<%= volumeId %>"
				>here</a
			>
			to see it
		</p>
		<a
			href="<%= process.env.CLIENT_HOST_ORIGIN%>/volume/<%= volumeId %>"
			style="
				margin: 0 auto;
				display: block;
				width: 200px;
				height: 300px;
				background-image: url('cid:<%= imageName %>');
				background-size: cover;
				background-position: center;
				border: none;
				border-radius: 5px;
				text-align: center;
			"
		></a>
		<p style="text-align: center; font-weight: bold">
			<%= series %> volume <%= volumeNumber%>
		</p>
	</div>
	<%- await include('./footer.ejs') %>
</div>
